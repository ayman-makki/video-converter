{
  "name": "video-converter",
  "version": "1.0.0",
  "description": "Cross-platform video converter with FFmpeg integration",
  "main": "dist/main.js",
  "homepage": "./",
  "author": {
    "name": "Video Converter Team",
    "email": "team@videoconverter.app"
  },
  "license": "MIT",
  "scripts": {
    "dev": "concurrently \"npm run dev:main\" \"npm run dev:renderer\"",
    "dev:main": "webpack --config webpack.main.config.js --watch",
    "dev:renderer": "webpack serve --config webpack.renderer.config.js",
    "build": "npm run build:main && npm run build:preload && npm run build:renderer",
    "build:main": "webpack --config webpack.main.config.js --mode=production",
    "build:preload": "webpack --config webpack.preload.config.js --mode=production",
    "build:renderer": "webpack --config webpack.renderer.config.js --mode=production",
    "start": "electron dist/main.js",
    "package": "npm run build && electron-builder",
    "package:win": "npm run build && electron-builder --win",
    "package:mac": "npm run build && electron-builder --mac",
    "package:linux": "npm run build && electron-builder --linux",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:linux": "npm run build && electron-builder --linux",
    "postinstall": "node scripts/download-ffmpeg.js"
  },
  "build": {
    "appId": "com.videoconverter.app",
    "productName": "VideoConverter",
    "directories": {
      "output": "dist/packages"
    },
    "compression": "maximum",
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "files": [
      "dist/**/*",
      "!dist/**/*.map",
      "!dist/**/*.d.ts",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}",
      "!**/{test,__tests__,tests,spec,specs}/**/*",
      "!**/*.{md,txt,log}",
      "!src/**/*",
      "!webpack*.js",
      "!tsconfig.json",
      "!*.config.js",
      "!node_modules/**/*"
    ],
    "asarUnpack": [
      "**/node_modules/fluent-ffmpeg/**",
      "**/node_modules/systeminformation/**"
    ],
    "extraResources": [
      {
        "from": "resources/ffmpeg/${os}-${arch}",
        "to": "ffmpeg",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "resources/icons/icon.ico"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "resources/icons/icon.icns",
      "category": "public.app-category.video",
      "hardenedRuntime": true,
      "gatekeeperAssess": false
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "resources/icons/icon.png",
      "category": "AudioVideo"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "dependencies": {
    "cross-spawn": "^7.0.3",
    "electron-is-dev": "^2.0.0",
    "electron-store": "^8.1.0",
    "fluent-ffmpeg": "^2.1.2",
    "mime-types": "^2.1.35",
    "path-exists": "^5.0.0",
    "systeminformation": "^5.21.20",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@ant-design/icons": "^5.2.6",
    "@types/fluent-ffmpeg": "^2.1.24",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@types/uuid": "^9.0.7",
    "antd": "^5.12.8",
    "concurrently": "^8.2.2",
    "css-loader": "^6.8.1",
    "dmg-license": "^1.0.11",
    "electron": "27.3.1",
    "electron-builder": "^24.9.1",
    "electron-reload": "^2.0.0-alpha.1",
    "html-webpack-plugin": "^5.6.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "style-loader": "^3.3.3",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1",
    "zustand": "^4.4.7"
  },
  "keywords": [
    "video",
    "converter",
    "ffmpeg",
    "mp3",
    "mp4",
    "electron",
    "cross-platform"
  ]
}